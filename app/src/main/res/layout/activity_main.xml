<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayou"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/menux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/menu"
            android:contentDescription="TODO" />

        <androidx.cardview.widget.CardView
            android:id="@+id/balen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/bale"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="0000"
                app:drawableStartCompat="@drawable/money" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="65dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bgmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/black_700"
                    android:layout_weight="1"
                    android:text="BGMI" />

                <Button
                    android:id="@+id/free"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/teal_700"
                    android:layout_weight="1"
                    android:text="Quiz (JEE, NEET)" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bgmibtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/squad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="false"
                        android:background="@color/black_700"
                        android:layout_weight="1"
                        android:text="Squad" />

                    <Button
                        android:id="@+id/duo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/teal_700"
                        android:layout_weight="1"
                        android:text="Duo" />


                    <Button
                        android:id="@+id/solo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/teal_700"
                        android:layout_weight="1"
                        android:text="Solo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quizbtn"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/phy"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/black_700"
                        android:layout_height="wrap_content"
                        android:text="Physics"/>


                    <Button
                        android:id="@+id/che"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/teal_700"
                        android:layout_height="wrap_content"
                        android:text="Chemistry"/>


                    <Button
                        android:id="@+id/mat"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/teal_700"
                        android:layout_height="wrap_content"
                        android:text="Math"/>


                    <Button
                        android:id="@+id/bio"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/teal_700"
                        android:layout_height="wrap_content"
                        android:text="Biology"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/quizbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="45dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/phyr"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/black_700"
                        android:layout_height="wrap_content"
                        android:text="Result"/>


                    <Button
                        android:id="@+id/cher"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:background="@color/black_700"
                        android:layout_height="wrap_content"
                        android:text="Result"/>


                    <Button
                        android:id="@+id/matr"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:background="@color/black_700"
                        android:layout_height="wrap_content"
                        android:text="Result"/>


                    <Button
                        android:id="@+id/bior"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:background="@color/black_700"
                        android:layout_height="wrap_content"
                        android:text="Result"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bgmirview"/>


            <FrameLayout
                android:id="@+id/quiz"
                android:visibility="invisible"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/phyrv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/matrv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cherv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/biorv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/phyrvr"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/matrvr"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/chervr"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/biorvr"/>

            </FrameLayout>
            </FrameLayout>

        </LinearLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnavigation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/teal_700"
            android:padding="10dp"
            android:layout_gravity="bottom"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled" />
    </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>