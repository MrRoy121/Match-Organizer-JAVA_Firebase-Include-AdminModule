<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEDCFBF2"
    tools:context=".tournament">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tournament Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/name"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="xyz"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Max Team : "
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/max"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>



            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/perspect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:text="Last Date : "
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/last"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1st Prize"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/fst"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2nd Prize"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2nd Prize"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/scnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2nd Prize"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3rd Prize"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/thrd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2nd Prize"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Fees : "
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fees"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>



            <TextView
                android:id="@+id/perkill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="China"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnavigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/teal_700"
        android:padding="10dp"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>